<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_company_form_inherited" model="ir.ui.view">
            <field name="name">res.company.view.inherited</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='timesheet_max_difference']" position="after">
                    <field name="hours_per_day"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
